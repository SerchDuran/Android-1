<resources>


    <style name="AppTheme" parent="Base.MyTheme"></style>

    <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    <!-- Base application theme. -->
    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/accent_500</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="TextAppearance.FontPath1" parent="TextAppearance.AppCompat.Body1">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="TextAppearance.FontPath2" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Thin.ttf</item>
    </style>

    <style name="TextAppearance.FontPath3" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>







</resources>
